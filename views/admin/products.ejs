<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if(prods.length > 0) {%>
        <div class="grid">
            <% for (let i = 0; i < prods.length; ++i) { let product = prods[i];%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img
                            src="<%= product.imageUrl %>"
                            alt="A Book"
                    >
                </div>
                <div class="card__content">
                    <h2 class="product__price"> $<%= product.price %> </h2>
                    <p class="product__description"><%= product.description %></p>
                </div>
                <form class="card__actions" action="/admin/edit-product/<%= product.id %>?edit=true" method="get">
                    <button class="button">Edit</button>
                </form>
                <form class="card__actions" action='/admin/delete-product/<%= product.id %>' method="post">
                    <button class="delete button">Delete</button>
                </form>

            </article>
            <% } %>
        </div>

    <% } else { %>
        <h1> NO PRODUCTS FOUND!</h1>
    <% } %>
</main>
<%- include('../includes/footer.ejs') %>
