<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/admin/<% if (!editing) { %>add-product<% } else { %>edit-product/<%= product.id %> <% } %>" method="POST">
            <div class="form-content">
                <label for="title">Product Name</label>
                <input type="text" name="title" placeholder="add new product ..." id="title" <% if (editing) { %> value="<%= product.title%>" <% } %> >

                <label for="price">Price</label>
                <input type="number" name="price" id="price" <% if (editing) { %> value="<%= product.price%>" <% } %> >

                <label for="imageUrl">Image</label>
                <input type="text" name="imageUrl" id="imageUrl" <% if (editing) { %> value="<%= product.imageUrl%>" <% } %> >

                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"> <% if (editing) { %><%= product.description%><% } %> </textarea>


            </div>
            <% if (editing) { %> <button type="submit">Edit Product</button> <% } else { %>
            <button type="submit">Add Product</button> <% }%>
        </form>
    </main>
<%- include('../includes/footer.ejs') %>
