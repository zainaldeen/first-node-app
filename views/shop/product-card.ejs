<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <div class="grid">
        <% if(product) {%>
        <article class="card product-item full-view">
            <header class="card__header">
                <h1 class="product__title" style="display: inline-block"><%= product.title %></h1>
            </header>
            <div class="card__image">
                <img
                        src="<%= product.imageUrl %>"
                        alt="A Book"
                >
            </div>
            <div class="card__content">
                <h2 class="product__price"> $<%= product.price %> </h2>
                <p class="product__description"><%= product.description %></p>
            </div>
            <footer>
<!--                <form action="/fav" method="post">-->
<!--                    <button class="single_product_action">love</button>-->
<!--                    <input hidden type="text" value="<%= product._id%>"/>-->
<!--                </form>-->
                <%- include('../includes/add-to-cart.ejs', {product: product})%>
            </footer>
        </article>
        <% } else {%>
        <h1>Not Found!!</h1>
        <% }%>
    </div>

</main>
<%- include('../includes/footer.ejs') %>
