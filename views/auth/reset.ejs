<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (errorMessage) { %>
        <div style="margin-bottom: 20px;" class="user-message user-message--error">
            <%= errorMessage %>
        </div>

    <%}%>
    <form class="product-form" action="/reset" method="POST">
        <h1 style="color: #807b7b"> Reset Password </h1>

        <div class="form-content">
            <label for="email">Email</label>
            <input type="text" name="email" placeholder="example@example.com" id="email" >
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <button class="custom_button" type="submit">Reset Your Password</button>
    </form>
</main>
<%- include('../includes/footer.ejs') %>
